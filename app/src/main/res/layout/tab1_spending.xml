<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/constraintLayout"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity$PlaceholderFragment">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/amountInput7"
            android:hint="@string/expense_amount"
            android:autofillHints=""
            app:layout_constraintBaseline_toBaselineOf="@+id/expenseInput5" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/expenseInput2"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/amountInput3"
            android:hint="@string/expense_amount"
            android:autofillHints=""
            app:layout_constraintBaseline_toBaselineOf="@+id/expenseInput3" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/expenseInput2"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/expenseInput3"
            android:hint="@string/expense_text"
            android:importantForAutofill="no"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/expenseInput2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/expenseInput5"
            android:hint="@string/expense_text"
            android:importantForAutofill="no"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/expenseInput3"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/amountInput2"
            android:hint="@string/expense_amount"
            android:autofillHints=""
            app:layout_constraintBaseline_toBaselineOf="@+id/expenseInput2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/expenseInput2"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/expenseInput2"
            android:hint="@string/expense_text"
            android:importantForAutofill="no" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/expenseInput"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/spending" android:text="@string/spending_text"
            android:textSize="18sp" android:textColor="@android:color/background_dark"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/expenseInput" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/spending" android:hint="@string/expense_text"
            android:importantForAutofill="no"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/amountInput"
            app:layout_constraintBaseline_toBaselineOf="@+id/expenseInput" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:hint="@string/expense_amount"
            app:layout_constraintStart_toEndOf="@+id/expenseInput" android:layout_marginStart="8dp"
            android:autofillHints=""/>
    <ImageButton
            android:src="@android:drawable/ic_menu_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/addExpense" android:background="@color/colorPrimary"
            android:onClick="addExpense" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/expenseInput5"/>

</android.support.constraint.ConstraintLayout>